<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">
    <TextView
        android:id="@+id/groupname_TextView"
        android:padding="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_name"
        android:textStyle="bold"
        android:textSize="32sp"
        android:textAppearance="@android:color/holo_blue_bright"/>
    <TextView
        android:id="@+id/app_info_TextView"
        android:layout_width="wrap_content"
        android:padding="12dp"
        android:layout_below="@id/groupname_TextView"
        android:layout_height="wrap_content"
        android:text="@string/app_info"
        android:textStyle="italic"/>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:id="@+id/member_list_RecyclerView"
        android:layout_below="@id/app_info_TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>